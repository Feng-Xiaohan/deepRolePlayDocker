# AI Role-Playing Agent System Configuration File

# API Proxy Related Configuration
proxy:
  target_url: "https://api.deepseek.com/v1"
  timeout: 30
  debug_mode: false  # 启用调试模式，跳过工作流和LLM调用，直接返回带图片的测试消息

# Scenario Management Related Configuration
scenario:
  file_path: "./scenarios/scenario.txt"

# Workflow Control Configuration
workflow:
  enabled: true  # Whether to enable the workflow, default is true

# LangGraph Workflow Configuration
langgraph:
  max_history_length: 7
  history_ai_message_offset: 1  # Start counting history from the Nth-to-last AI message (1=all messages before the last AI message are history)

# Agent Configuration
agent:
  # Model Configuration
  model: "google/gemini-2.5-flash"
  temperature: 0.1
  base_url: "https://openrouter.ai/api/v1"
  api_key: "YOUR_API_KEY_HERE"
  max_tokens: 8192
  top_p: 0.9
  
  # Debugging and Loop Control
  debug: false
  max_iterations: 25
  
  
  # Timeout Settings
  timeout: 120

# System Configuration
system:
  log_level: "INFO"
  log_dir: "./logs"
  
# Server Configuration
server:
  host: "0.0.0.0"
  port: 6666
  reload: false