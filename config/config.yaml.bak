# AI角色扮演代理系统配置文件

# API代理相关配置
proxy:
  target_url: "https://api.deepseek.com/v1"
  timeout: 30

# 情景管理相关配置
scenario:
  file_path: "./scenarios/scenario.txt"
  update_enabled: true

# LangGraph工作流配置
langgraph:
  model: "deepseek-chat"
  max_history_length: 7
  history_ai_message_offset: 1  # 从倒数第几个AI消息开始算历史记录（1=最后一个AI消息之前都是历史）

# 代理配置
agent:
  # 模型配置
  model: "deepseek-chat"
  temperature: 0.1
  base_url: "https://api.deepseek.com/v1"
  api_key: "YOUR_API_KEY_HERE"
  max_tokens: 8192
  top_p: 0.9
  
  # 调试和循环控制
  debug: false
  max_iterations: 30
  
  
  # 超时设置
  timeout: 120
  
  # 流式输出
  stream_mode: "values"

# 系统配置
system:
  log_level: "INFO"
  log_dir: "./logs"
  
# 服务器配置
server:
  host: "0.0.0.0"
  port: 6666
  reload: false